---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   alt: string;
}

const { imagePath, alt} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>('@assets/images/**/*.{jpeg,jpg,png}');

const path = `/src/assets/images/events/${imagePath}`;

if (!images[path]) throw new Error(`"${path}" does not exist in glob: "@assets/images/**/*.{jpeg,jpg,png}"`);

---

<Image src={images[path]()} alt={alt} class="flex basis-full items-center py-2 object-contain"/>